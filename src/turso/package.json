{
  "name": "@crbroughton/sibyl_turso",
  "type": "module",
  "version": "2.1.2",
  "description": "A lightweight query builder for Turso",
  "author": "Craig R Broughton",
  "license": "MIT",
  "homepage": "https://github.com/crbroughton/sibyl",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crbroughton/sibyl.git"
  },
  "keywords": [
    "query builder",
    "sqlite",
    "wasm",
    "embedded",
    "typescript",
    "turso"
