    "changeset:version": "npx changeset version",
    "publish": "bun run build && npm publish --access=public"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.8.0",
    "@changesets/cli": "^2.27.1",
    "@faker-js/faker": "^8.4.1",
    "@types/bun": "latest",
    "@types/sql.js": "^1.4.9",
    "bun-plugin-dts": "^0.2.1",
    "eslint": "^8.57.0",
    "sql.js": "^1.10.2"
  }
}
